<h1 class="center-header">GITLAB USER</h1>

<img src="{{userResponseJSON.avatar_url}}">
<p>
    Name: {{userResponseJSON.name}}<br>
    Username: {{userResponseJSON.username}}<br>
    User ID: {{userResponseJSON.id}}<br>
    Email: {{userResponseJSON.email}}<br>
    Last Activity: {{userResponseJSON.last_activity_on}}<br>
</p>

<div id="issue-list">
    {{#if events.length }}
    {{#each events}}
    <div class="issue">
        <div class="issue-header">
            <h3>{{this.created_at}}</h3>
        </div>
        <div class="issue-body"><p>{{this.action_name}}</p></div>
    </div>
    {{/each}}
    {{else}}
    <p>No activities yet.</p>
    {{/if}}
</div>

<template id="issue-template">
    <div class="issue-header">
        \{{#if this.done}}
            <form method="post" action="./\{{this.issueid}}/reopen" target="hiddenFrame">
                <button type="submit"><img src="./img/check.png"></button>
            </form>
        \{{else}}
            <form method="post" action="./\{{this.issueid}}/close" target="hiddenFrame">
                <button type="submit"> </button>
            </form>
        \{{/if}}
        <h3>\{{this.title}}</h3>
        <img src="\{{this.userAvatar}}" class="avatar">
        <h4 class="user-info">\{{this.userFullname}} (\{{this.userUsername}})</h4>
    </div>
    <div class="issue-body"><p>\{{this.description}}</p></div>
    <div class="issue-footer">
        <ul>
            <li>
                <a type="button" class="button-link" href="./\{{this.issueid}}/edit" role="button">Edit</a>
            </li>
        </ul>
    </div>
</template>